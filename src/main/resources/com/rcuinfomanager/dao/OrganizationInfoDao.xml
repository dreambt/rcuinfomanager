<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rcuinfomanager.dao.OrganizationInfoDao">
    <resultMap id="organizationInfoMap" type="com.rcuinfomanager.model.OrganizationInfo">
         <id property="organizationId" column="organizationId" />
        <result property="userId" column="userId"></result>
        <result property="organizationName" column="organizationName"/>
        <result property="organizationDescription" column="organizationDescription"/>
        <result property="fatherId" column="fatherId"/>
        <result property="note1" column="note1"/>
        <result property="note2" column="note2"/>
        <result property="note3" column="note3"/>
        <result property="note4" column="note4"/>
    </resultMap>

    <resultMap  id="organizationInfoMap" type="com.rcuinfomanager.model.OrganizationInfo">
        <association property="userInfo" column="userInfo" select="selectOrganizationInfo"  javaType="OrganizationInfo"/>
    </resultMap>

    <select id="selectOrganizationInfo" parameterType="int" resultType="OrganizationInfo">
        select * from organizationInfo org where org.organizationId = #{organizationId}
    </select>

    <select id="getOrganizationById" parameterType="int" resultMap="organizationInfoMap">
       select * from organizationInfo org where org.organizationId = #{organizationId}
    </select>



</mapper>